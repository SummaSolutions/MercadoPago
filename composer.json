{
  "name": "mercadopago/magento-plugin",
  "description": "MercadoPago Magento Plugin",
  "authors": [
    {
      "name": "MercadoPago",
      "email": "info@mercadopago.com"
    }
  ],
  "require": {
    "aydin-hassan/magento-core-composer-installer": "~1.0",
    "magento/magento": "1.9.2.1"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:AydinHassan/magento-community.git"
    }
  ],
  "extra": {
    "magento-root-dir": "source",
    "magento-core-deploy": {
      "excludes": [
        "composer.json",
        "composer.lock"
      ]
    }
  },
  "config":{
    "bin-dir" : "bin"
  },
  "autoload": {
    "psr-0": {
      "": [
        "source/app",
        "source/lib",
        "source/app/code/local",
        "source/app/code/community",
        "source/app/code/core"
      ]
    }
  },
  "minimum-stability": "dev"
}
